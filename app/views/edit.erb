<form method="post" action="/recipes/<%= @recipe.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
    Name: <input type="text" value="<%= @recipe.name %>" name="name">
    Ingredients: <input type="text" value="<%= @recipe.ingredients %>" name="ingredients">
    Cooktime: <input type="text" value="<%= @recipe.cook_time %> "name="cook_time">
    <input type="submit" name="submit">
</form>